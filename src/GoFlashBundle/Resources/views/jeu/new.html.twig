{% extends 'GoFlashBundle::frontLayout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/newjeu.css') }}">
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Ajoutes ton jeu!</h1>
            </div>
        {{ form_start(form) }}
            <div class="col-lg-12">
                {{ form_label(form.titre,'Titre du jeu',{'label_attr':{'class':'col-xs-12 col-lg-10 col-lg-offset-1'}}) }}
                {{ form_widget(form.titre,{'attr':{'class':'col-xs-12 col-lg-8 col-lg-offset-2'}}) }}
            </div>
            <div class="col-lg-12">
                {{ form_label(form.description,'Description',{'label_attr':{'class':'col-xs-12 col-lg-10 col-lg-offset-1'}}) }}
                {{ form_widget(form.description,{'attr':{'class':'col-xs-12 col-lg-8 col-lg-offset-2'}}) }}
            </div>
            <div class="col-lg-12">
                {{ form_label(form.file,'L\'objectif',{'label_attr':{'class':'col-xs-12 col-lg-10 col-lg-offset-1'}}) }}
                {{ form_widget(form.file,{'attr':{'class':'col-xs-12 col-lg-8 col-lg-offset-2'}}) }}
            </div>
            <div class="col-lg-12">
                <a class="btn btn-default col-xs-offset-1  col-xs-4 col-sm-offset-2 col-sm-4 col-md-offset-1 col-md-4 col-lg-offset-2 col-lg-3 return" href="{{ path('jeu_index') }}"><i class="fa fa-undo fa-2x"></i></a>
                <button class="btn btn-default col-xs-offset-2 col-xs-4 col-sm-offset-1 col-sm-4 col-md-offset-2 col-md-4 col-lg-offset-2 col-lg-3 validNewJeu" type="submit"><i class="fa fa-check-square-o fa-2x"></i></button>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
