{% extends 'GoFlashBundle::frontLayout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/showjeu.css') }}">
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10 text-center">
                <div class="vignetteJeu">
                    <h1>Bienvenue {{ app.user.username }}</h1>
                    <h2>C'est parti pour le jeu {{ jeu.titre }}</h2>
                    <p>{{ jeu.description }}</p>
                    <img class="img-responsive img-rounded" src="{{ asset('uploads/objectif/'~ jeu.imageObjectif) }}" alt="image du jeu {{ jeu.id ~' '~ jeu.titre}}">
                    <a id="go" class="btn btn-default" href="{{ path('joueur_new',{ 'id': jeu.id }) }}"><i class="fa fa-play fa-2x"></i></a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
